<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Seller" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4fc3f7</item>
        <item name="colorPrimaryVariant">#0093c4</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#ff6f00</item>
        <item name="colorSecondaryVariant">#c43e00</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Surface</item>
    </style>

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextView.ChipStatus">
        <item name="android:textSize">@dimen/text_10</item>
    </style>
</resources>