<resources>
    <!-- Base application theme. -->
    <style name="Theme.Seller" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_50</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryLightColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_70</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Surface</item>
        <item name="materialButtonStyle">@style/Button</item>
        <item name="textInputStyle">@style/TextInputLayout</item>
    </style>

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextView.ChipStatus">
        <item name="android:textSize">@dimen/text_10</item>
    </style>

    <style name="TextViewHeader" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewSubHeader" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewError" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/red_primary</item>
        <item name="drawableStartCompat">@drawable/ic_baseline_warning_amber_12</item>
        <item name="drawableTint">@color/red_primary</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="TextViewTitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="TextViewBodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="TextViewCaption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/white_60</item>
    </style>

    <style name="WhiteTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
    </style>
  <!-- Base application theme. -->
    <style name="Base.Theme.Seller" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
</resources>