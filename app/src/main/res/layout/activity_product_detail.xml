<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".presentation.product.detail.ProductDetailActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/sectionButton"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="16dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vpProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary_10"
                    android:contentDescription="@string/product"
                    android:minHeight="150dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddImage"
                    style="@style/ButtonOutlined.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/product_image_add"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vpProduct"
                    tools:visibility="visible" />

                <TableLayout
                    android:id="@+id/sectionMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/btnAddImage">

                    <TableRow>

                        <TextView
                            android:text="@string/product_name"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvName"
                            style="@style/Text.Heading4.SemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="4dp"
                            android:textColor="@color/blue_black_50"
                            tools:text="Baju Batik Anyam" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="@string/product_price"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvOriginalPrice"
                            style="@style/Text.Heading4.Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="4dp"
                            tools:text="Rp 100.000" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="@string/product_price_promo"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvPrice"
                            style="@style/Text.Heading4.SemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="4dp"
                            android:textColor="?colorPrimary"
                            tools:text="Rp 70.000" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="@string/product_price_promo_status"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvPromoStatus"
                            style="@style/Text.Heading4.SemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="4dp"
                            android:textColor="@color/green_primary"
                            tools:text="Tidak aktif" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="@string/product_discount"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvPercentDiscount"
                            style="@style/Text.Heading5.Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="4dp"
                            tools:text="20%" />
                    </TableRow>

                    <TableRow android:gravity="center_vertical">

                        <TextView
                            android:text="@string/product_stock"
                            android:textColor="@color/black" />

                        <LinearLayout android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvStock"
                                style="@style/Text.Heading5.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="4dp"
                                tools:text="25" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnUpdateStock"
                                style="@style/Button.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="4dp"
                                android:text="@string/product_stock_edit" />
                        </LinearLayout>
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="@string/product_sold_count"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvSoldCount"
                            style="@style/Text.Heading5.Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="4dp"
                            tools:text="17" />
                    </TableRow>
                </TableLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:padding="16dp">

                <TextView
                    android:id="@+id/labelDetail"
                    style="@style/Text.Heading5.SemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detail"
                    android:textColor="@color/blue_black_50"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelDetail">

                    <TableRow>

                        <TextView
                            android:text="@string/shop"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvShopName"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="4dp"
                            tools:text="Toko Maju Terus" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="@string/product_category"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvCategory"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="4dp"
                            tools:text="Kuliner" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="@string/product_subcategory"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvSubCategory"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="4dp"
                            tools:text="Kuliner" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="@string/product_weight"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvWeight"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="4dp"
                            tools:text="100" />
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/labelDesc"
                    style="@style/Text.Heading5.SemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/product_desc"
                    android:textColor="@color/blue_black_50"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/labelDesc"
                    tools:text="Beli aneka produk di Toko Gondray store secara online sekarang. Kamu bisa beli produk dari Toko Gondray store dengan aman &amp; mudah dari Kota Bekasi. Ingin belanja lebih hemat &amp; terjangkau di Toko Gondray store?" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/sectionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:contentPadding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/edit"
            app:layout_constraintBottom_toBottomOf="parent" />
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>