<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.user.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?colorOnPrimary">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/containerProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="?colorOnPrimary"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="16dp"
                android:paddingStart="24dp"
                android:paddingEnd="16dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgUser"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_primary_10"
                    android:padding="8dp"
                    android:src="@drawable/ic_user"
                    app:layout_constraintBottom_toBottomOf="@+id/shopStatus"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvUsername" />

                <TextView
                    android:id="@+id/tvUsername"
                    style="@style/Text.Heading6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    android:textColor="@color/blue_gray_50"
                    app:layout_constraintBottom_toTopOf="@+id/tvShop"
                    app:layout_constraintEnd_toStartOf="@+id/imgEdit"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/imgUser"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="Hallo, Jamet" />

                <TextView
                    android:id="@+id/tvShop"
                    style="@style/Text.Heading3.SemiBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/blue_black_50"
                    app:layout_constraintBottom_toTopOf="@+id/shopStatus"
                    app:layout_constraintEnd_toEndOf="@+id/tvUsername"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/tvUsername"
                    app:layout_constraintTop_toBottomOf="@+id/tvUsername"
                    tools:text="PT Jamet Perkasa Sekali" />

                <id.io.olebsai.component.StatusChipView
                    android:id="@+id/shopStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:padding="4dp"
                    android:text="@string/shop_status_registration"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tvShop"
                    app:layout_constraintTop_toBottomOf="@+id/tvShop"
                    app:status="red"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgEdit"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/circle_blue_grey_10"
                    android:padding="8dp"
                    android:src="@drawable/ic_baseline_edit_24_blue_grey_50"
                    app:layout_constraintBottom_toBottomOf="@id/imgUser"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imgLogout"
                    app:layout_constraintTop_toTopOf="@id/imgUser" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgLogout"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@drawable/circle_blue_grey_10"
                    android:padding="8dp"
                    android:src="@drawable/ic_baseline_logout_24"
                    app:layout_constraintBottom_toBottomOf="@id/imgUser"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/imgUser" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/containerProfile">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vpBanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/Text.Heading4.SemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/menu_order"
                    android:textColor="@color/blue_black_50" />

                <include
                    android:id="@+id/sectionOrder"
                    layout="@layout/home_order_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp" />

                <TextView
                    style="@style/Text.Heading4.SemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/product_sold_statistic"
                    android:textColor="@color/blue_black_50" />

                <include
                    android:id="@+id/sectionChart"
                    layout="@layout/home_chart_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="24dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>